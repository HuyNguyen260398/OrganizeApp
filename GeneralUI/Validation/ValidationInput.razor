@inherits ValidationInputBase

<div class="validation-container">
    @*<input class="validation-input form-control" @onchange="HandleInputChanged" value="@Value" />*@
    <input class="validation-input form-control"
           @attributes="InputAttributes"
           style="@(String.IsNullOrEmpty(Error) ? "" : "border-top-right-radius: 0; border-bottom-right-radius: 0;")"
           @onchange="(async (eventArgs) => await ValueChanged.InvokeAsync(eventArgs.Value.ToString()))" value="@Value" /> <!-- Direct call to event handler method -->

    @if (!string.IsNullOrEmpty(Error))
    {
        <div class="val-tooltip">
            <p>!</p>
            <span class="val-tooltip-text">@Error</span>
        </div>
    }
</div>